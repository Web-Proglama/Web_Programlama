@model LoginUserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}



<div class="container">
	<h3 class="tittle">Sign In Now</h3>
	<div class="row inner-sec">
		<div class="login p-5 bg-light mx-auto mw-100">
			<form action="#" method="post">
				<div class="form-group">
					<label key = "9" for="exampleInputEmail1 mb-2">Kullanıcı adi</label>
					<input type="text" asp-for="UserName" class="form-control" id="exampleInputEmail1"  placeholder="" required="">
					<span asp-validation-for="UserName" class="text-danger text-muted"></span>
					<small id="emailHelp" class="form-text text-muted">We'll never share your information with anyone else.</small>
				</div>
				<div class="form-group">
					<label for="exampleInputPassword1 mb-2">Password</label>
					<input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="" required="">
					<span asp-validation-for="Password" class="text-danger text-muted"></span>
				</div>
			
				<button type="submit" key= "10" class="btn btn-primary submit mb-4">Sign In</button>
				<p><a  key= "11" href="/register/"> Don't have an account?</a></p>
			</form>
		</div>
	</div>
</div>